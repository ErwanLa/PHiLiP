# Listing of Parameters
# ---------------------

set test_type = euler_vortex

# Number of dimensions
set dimension = 2

set pde_type  = euler

#set conv_num_flux = roe
set conv_num_flux = lax_friedrichs

set use_weak_form = false

set overintegration = 0

set flux_nodes_type = GL

set use_split_form = false

set use_energy = false

set use_L2_norm = false

set use_classical_FR = false

set use_periodic_bc = true

#set flux_reconstruction = cPlus
set flux_reconstruction = user_specified_value
set FR_user_specified_correction_parameter_value = 3.67e-3

set number_ESFR_parameter_values = 0
set ESFR_parameter_values_start = 1.0e-5
set ESFR_parameter_values_end = 1.0e3

set use_inverse_mass_on_the_fly = true

#set use_skew_sym_deriv = false

subsection euler
  set reference_length = 1.0
  set mach_infinity = 0.5
  set angle_of_attack = 45
end

subsection ODE solver
  # Maximum nonlinear solver iterations
  # Simply do 20 explicit time steps and compare with exact solution
  set nonlinear_max_iterations = 1000

  #set output_solution_every_x_steps = 1

  set initial_time_step = 0.0001

  # Print every print_iteration_modulo iterations of the nonlinear solver
  set print_iteration_modulo = 100

  # Explicit or implicit solverChoices are <explicit|implicit>.
  set ode_solver_type     = runge_kutta
end

subsection manufactured solution convergence study
  # Last degree used for convergence study
  set degree_end        = 3

  # Starting degree for convergence study
  set degree_start      = 1

  # Multiplier on grid size. nth-grid will be of size
  # (initial_grid^grid_progression)^dim
  set grid_progression  = 1.0

  set grid_progression_add  = 10

  # Initial grid of size (initial_grid_size)^dim
  set initial_grid_size = 20

  # Number of grids in grid study
  set number_of_grids   = 4

  set slope_deficit_tolerance  = 0.15
end

